<header class="bg-slate-500 h-auto p-4  flex justify-center shadow-lg border-b-4 border-white">
    <div class="w-10/12 flex flex-col md:flex-row justify-between items-center">
        <h2 class="text-4xl font-bold text-white font-mono">
            <a href="/">Arnowa</a>
        </h2>
        <nav class="mt-5 md:mt-0">
            <ul class="flex  items-center gap-8 text-white">
                <li class="<%= active === "home" ? "activeMenu" : '' %>">
                    <a href="/">Home</a>
                </li>
                <% if(locals.user == undefined){ %> 
                    <li class="<%= active === "login" ? "activeMenu" : '' %>">
                        <a href="/login">Login</a>
                    </li>
                    <li class="<%= active === "register" ? "activeMenu" : '' %>">
                        <a href="/register">Register</a>
                    </li>
                <% } %>
                
                <% if(locals.user){ %>
                    <li class="<%= active === "dashboard" ? "activeMenu" : '' %>">
                        <a href="/users/dashboard">Dashboard</a>
                    </li>

                    <li>
                        <form action="/logout" method="post">
                            <button type="submit">Logout</button>
                        </form>
                    </li>
                <% } %>  
            </ul>
        </nav>
    </div>
</header>