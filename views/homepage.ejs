<section class="pt-10 homepage-container">
    <div class="flex flex-col justify-center md:flex-row gap-10 md:justify-around items-center">
        <img src="/img/home.svg" alt="Welcome" class="h-64">

        <div class="flex flex-col gap-10 text-center">
            <div class="text-3xl md:text-6xl font-bold text-slate-800">
                Welcome to Arnowa,
