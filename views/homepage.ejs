        <button class="bg-slate-600 text-white px-20 py-20 pt-3 pb-3 rounded-md shadow-md">
            <a href="/login"><i class="fas fa-sign-in"></i> Login</a>
        </button>
        <button class="bg-slate-800 text-white px-20 py-20 pt-3 pb-3 rounded-md shadow-md">
            <i class="fas fa-user-plus"></i> <a href="/register">Register</a>
