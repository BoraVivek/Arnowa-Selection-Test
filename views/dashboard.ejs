<section class="dashboard-container">
    <div class="flex flex-col bg-slate-500 shadow-md text-white rounded-md w-full">
        <div class="p-5 text-center">
            Welcome, <b>
                <%= user.name %>
            </b>
        </div>
        <div class="p-5 bg-slate-600 flex justify-around gap-32">
            <div class="flex flex-col justify-center items-center gap-10">
                <canvas id="growthChart"></canvas>
                <div class="text-2xl">Growth</div>

                <div class="percentage text-green-400 text-5xl font-bold">
                    <%= (growthChart[0].value / 1000)*100 %>%
                </div>
            </div>

            <div class="flex flex-col justify-center items-center gap-10">
                <canvas id="lossChart"></canvas>

                <div class="text-2xl">Loss</div>

                <div class="percentage text-red-400 text-5xl font-bold">
                    <%= (lossChart[0].value / 1000)*100 %>%
                </div>
            </div>
        </div>
    </div>
</section>



<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>


<script>
    const growthLabels = [
        "<%= growthChart[0].country %>",
        "<%= growthChart[1].country %>",
        "<%= growthChart[2].country %>",
    ];

    const lossLabels = [
        "<%= lossChart[0].country %>",
        "<%= lossChart[1].country %>",
        "<%= lossChart[2].country %>",
    ];

    Chart.defaults.color = '#fff';



    const lossChartData = {
        labels: lossLabels,
        datasets: [{
            label: 'Loss Chart',
            backgroundColor: ['#0b90c4', '#e25353', '#ffeaa8'],
            data: [<%= lossChart.map((data) => {
                return data.value;
            }) %>],
        }]
    };

    const lossChartConfig = {
        type: 'pie',
        data: lossChartData,
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                },
            }
        },
    };

    const lossChart = new Chart(
        document.getElementById('lossChart'),
        lossChartConfig
    );




    const growthChartData = {
        labels: growthLabels,
        datasets: [{
            label: 'Growth Chart',
            backgroundColor: ['#0b90c4', '#e25353', '#ffeaa8'],
            data: [<%= growthChart.map((data) => {
                return data.value;
            }) %>],
            borderWidth: 2,
            borderColor: '#fff'
        }]
    };

    const growthChartConfig = {
        type: 'bar',
        data: growthChartData,
        options: {
            responsive: false,
            plugins: {
                legend: false,
            },
            aspectRatio: 1
        },
    };

    const growthChart = new Chart(
        document.getElementById('growthChart'),
        growthChartConfig
    );


</script>